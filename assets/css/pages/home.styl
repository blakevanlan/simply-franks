@import "../lib/variables"
@import "../lib/mixins"

body.home

    #about-button
      display: inline-block
      background-gray-gradient: true
      margin: 6px 6px 0 0
      padding: 6px 0
      border-radius: 4px
      color: #fff
      width: 100px
      dropshadow: inset 1px 1px 4px rgba(255, 255, 255, 0.6), inset -1px -1px 4px rgba(0, 0, 0, 0.6)
      cursor: pointer

      &:active
         dropshadow: inset -1px -1px 4px rgba(255, 255, 255, 0.3), inset 1px 1px 4px rgba(0, 0, 0, 0.6)
      
   #map, #inactive-cover
      position: absolute
      top: header-height
      right: 0
      bottom: footer-height
      left: 0
      z-index: 1

   #about-wrap
      position: absolute
      top: header-height
      height: auto
      width: 100%
      bottom: footer-height

      #about
         display: none
         position: relative
         width: 100%
         max-height: 100%
         overflow-x: hidden
         overflow-y: auto
         z-index: 60

         .inner
            padding: 16px
            background: #EBEBEB
            color: dark-gray
            border: 1px solid #C9C9C9
            dropshadow: 0px 2px 5px rgba(0,0,0,.2), inset 1px 1px 3px rgba(0,0,0,.3), inset -1px 1px 3px rgba(0,0,0,.3)
            font-size: .9em
            line-height: 1.3em

            h2
               margin: 12px 0 6px 0
               font-weight: bold

            p
               margin: 6px 0

            .logo
               text-align: center
               margin-bottom: 12px

               img
                  height: 105px
                  width: 286px

   #inactive-cover
      z-index: 50
      background: rgba(255,255,255,.6)
      display: none

      #message-wrap
         margin: 120px auto 0
         width: 160px
         padding: 16px 20px
         text-align: center
         background: #E5D7D9
         border-radius: 10px
         color: dark-gray
         border: 2px solid dark-gray
         dropshadow: 0px 2px 3px rgba(0,0,0,.4), inset 1px 1px 3px rgba(0,0,0,.3), inset -1px 1px 3px rgba(0,0,0,.3)

      #sad-face
         display: block
         font-size: 6.8em
         margin-bottom: 14px
         
      #message
         font-size: .8em
         line-height: 1.1em