doctype 5
html
   head
      title Simply Franks
      meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
      meta(name="viewport", content="width=device-width, initial-scale=1")

      block styles
         != css("lib/normalize")
         != css("skin")
         != css("pages/home")
         != css("pages/admin")
         != css("pages/login")

      block scripts
         != js("lib/jquery-1.8.1")
         != js("lib/knockout")
         script(src="http://maps.googleapis.com/maps/api/js?libraries=geometry&sensor=false", type="text/javascript")
         script(src="/socket.io/socket.io.js")

   - var viewDir = locals.root
   - var view = locals.filename.replace(viewDir, "").replace(".jade", "").replace(/^[\\\/]/g, "");
   - var viewClass = view.replace(/[\\\/]/g, "-");
   body(class=viewClass)
      

      #header
         img#logo(src="/images/logo-only-words.png", alt="Logo")
         block header-nav

      block body

      #footer
         block footer